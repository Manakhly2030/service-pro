 "html": "<!DOCTYPE html>\n<html lang=\"en\">\n<head>\n    <meta charset=\"UTF-8\">\n    <meta name=\"viewport\" content=\"width=device-width, initial-scale=1.0\">\n    <title>Service Order Form</title>\n    <link rel=\"stylesheet\" href=\"styles.css\">\n   <head>\n    <style>\n        /* Import Source Sans Pro from Google Fonts */\n\n/* Apply Source Sans Pro to the body and other elements */\nbody {\n    font-family: 'Source Sans Pro', sans-serif;\n}\n\n@page {\n    margin-top: 70px;\n    margin-bottom: 70px;\n}\n.form-headers {\n        position: flex;\n        margin-top: -88px;\n    }\n    \n\n/* Apply styles for printing */\n@media print {\n    body {\n        margin: 0;\n        padding: 0;\n        font-family: 'Source Sans Pro', sans-serif;\n    }\n    .headers-html {\n        width: 30%; /* Set the desired width for the letterhead */\n    }\n    .table {\n        margin-left: 340px;\n    }\n\n    .service-order-form {\n        padding-bottom: -20px;\n        margin-left: 0px;\n    }\n\n    .additional-info {\n        padding: 2px;\n    }\n\n    .payment-terms {\n        padding-top: 20px;\n        margin-top: -22px;\n    }\n}\n\n/* Table borders */\n.item-table {\n    width: 100%;\n    border-collapse: collapse; /* Ensure that borders do not double up */\n    font-family: 'Source Sans Pro', sans-serif;\n}\n\n.item-table th, .item-table td {\n    border: 2px solid #e0dcdc; /* Add border for all cells */\n    padding: 8px; /* Add some padding for better spacing */\n}\n\n.item-table th:last-child, .item-table td:last-child {\n    border-right: 2px solid #e0dcdc; /* Ensure right border is visible */\n}\n.row {\n        line-height: 1.2; /* Adjust the value as needed for desired spacing */\n    }\n    .col-xs-5, .col-xs-7 {\n        line-height: 1.2; /* Ensure columns also inherit the smaller line height */\n    }\n\n\n    </style>\n<body style=\"font-family:Source Sans Pro\">\n    \n<div>\n    <div class=\"service-order-form\">\n        <div style=\"width:70%;\"><strong style=\"font-size: 27pt;margin-left: -15px;\">Quotation</strong></p></div>\n        <p style=\"font-size:12pt;margin-left: -14px;\">Quotation No: <strong style=\"font-size:12pt; font-weight:bold; \"> {{doc.name}} </strong></p>\n        </div>\n\n        <div id=\"headers-html\" style=\"width:48%; float:right; margin-top: -114px; margin-left: -18px;\">\n<img src=\"/assets/service_pro/img/abc.jpeg\" alt=\"Letterhead\" style=\"width: 100%;\" /></div>\n\n   \n        \n          \n    <div class=\"row\" style=\"text-align-last: start;\">\n        <div class=\"col-xs-6\">\n            \n        {% if doc.customer_name %}                \n        <div class=\"row\">\n        <div class=\"col-xs-6 \"><big><b>To:</b></big></div>\n        <div class=\"col-xs-6 \"><big>{{ doc.customer_name }}</big> </div>\n        </div>\n        {% endif %}\n        \n        {% if doc.custom_sales_executive %}\n        <div class=\"row\">\n            <div class=\"col-xs-6 \"><big><b>Sales Executive:</b></big></div>\n            <div class=\"col-xs-6 \"><big>{{ doc.custom_sales_executive }}</big></div>\n        </div>\n        {% endif %}\n        </div>\n        \n        \n        <div class=\"col-xs-6\">\n            {% if doc.transaction_date %}\n        <div class=\"row\">\n            <div class=\"col-xs-5 text-right\"> <big><b>Date:</b></big> </div>\n            <div class=\"col-xs-7 \">\n                <big>{{ doc.get_formatted(\"transaction_date\") or ''}}</big></div>\n        </div>   \n         {% endif %}\n        \n       {% if doc.custom_rfq_no %}\n        <div class=\"row\">\n            <div class=\"col-xs-5 text-right\"><big><b>RFQ No:</b></big></div>\n            <div class=\"col-xs-7 \"><big>{{ doc.custom_rfq_no}}</big> </div>\n        </div>\n        {% endif %}\n        \n       {% if doc.valid_till %}\n        <div class=\"row\">\n            <div class=\"col-xs-5 text-right\"> <big><b>Valid Till:</b></big> </div>\n            <div class=\"col-xs-7 \">\n                <big>{{ doc.get_formatted(\"valid_till\") or ''}}</big></div>\n        </div>  \n        {% endif %}\n       \n     </div>\n            \n</div>\n    </div>\n\n    <div>\n    {% if doc.items and doc.items|length > 0 %}\n    <table class=\"item-table\" style=\"margin-top: 12px;\">\n        <thead>\n            <tr>\n                <th>Sr</th>\n                <th>Item Code</th>\n                <th>Qty</th>\n                <th>UOM</th>\n                <th>Rate</th>\n                <th>Amount</th>\n            </tr>\n        </thead>\n        <tbody>\n            {% for row in doc.items %}\n            <tr>\n                <td>{{ loop.index }}</td> <!-- Serial number -->\n                <td style=\"width: 60%;\">{{ row.item_code }}</td>\n                <td>{{ row.qty }}</td>\n                <td>{{ row.uom }}</td>\n                <td>{{ row.rate }}</td>\n                <td>{{ row.amount }}</td>\n            </tr>\n            {% endfor %}\n        </tbody>\n    </table>\n    {% else %}\n    <p>.</p>\n    {% endif %}\n</div>\n\n\n       \n  <div style=\"padding-bottom: 20px; display: flex; justify-content: flex-end;margin-right: -4px;\">\n    <table class=\"table\" style=\"width:50%; margin-top:1px;\">\n        <tbody>\n            <tr style=\"border:hidden;\">\n                <td style=\"font-size: 12pt; border:hidden; line-height:9px;\">Total</td>\n                <td style=\"font-size: 12pt; border:hidden; text-align: right; line-height:0;\">\n                    {{ doc.get_formatted(\"total\") }}\n                </td>\n            </tr>\n\n            <!-- Show Net Total only if Discount exists -->\n            {% if doc.additional_discount_amount != 0 %}\n            <tr>\n                <td style=\"font-size: 12pt; border:hidden; line-height:9px;\">Net Total</td>\n                <td style=\"font-size: 12pt; border:hidden; text-align: right; line-height:0;\">\n                    {{ doc.get_formatted(\"net_total\") }}\n                </td>\n            </tr>\n            {% endif %}\n\n            {% if doc.tax_amount %}\n            {% if doc.tax_amount != 0 %}\n            <tr style=\"border:hidden;\">\n                <td style=\"font-size: 12pt; border:hidden; line-height:9px;\">Tax Amount</td>\n                <td style=\"font-size: 12pt; border:hidden; text-align: right; line-height:0;\">\n                    {{ doc.get_formatted(\"tax_amount\") }}\n                </td>\n            </tr>\n            {% endif %}\n            {% endif %}\n\n            <!-- Conditional check for discount -->\n             {% if doc.discount_amount %}\n            {% if doc.additional_discount_amount != 0 %}\n            <tr>\n                <td style=\"font-size: 12pt; border:hidden; line-height:9px;\">Discount</td>\n                <td style=\"font-size: 12pt; border:hidden; text-align: right; line-height:0;\">\n                    {{ doc.get_formatted(\"discount_amount\") }}\n                </td>\n            </tr>\n            {% endif %}\n             {% endif %}\n            \n            <tr style=\"border:hidden;\">\n                <td style=\"font-size: 12pt; font-weight: bold; border:hidden; line-height:9px;\">Grand Total</td>\n                <td style=\"font-weight: bold; font-size: 12pt; border:hidden; text-align: right; line-height:0;\">\n                    {{ doc.get_formatted(\"grand_total\") }}\n                </td>\n            </tr>\n        </tbody>\n    </table>\n</div>\n\n\n\n        <div class=\"additional-info\">\n             {% if doc.total_qty %}\n            <p style=\"font-size: 12pt;margin-top: -38px;margin-left: 3px;\">Total Qty: {{doc.total_qty}}</p>\n             {% endif %}\n             {% if doc.custom_delivery_period %}\n            <p style=\"font-size: 12pt;\"><strong style=\"font-size: 12pt;margin-left: 3px;\">Delivery Period:</strong> {{doc.custom_delivery_period}}</p>\n             {% endif %}\n             {% if doc.in_words %}\n            <p style=\"font-size: 12pt;\"><strong style=\"font-size: 12pt;margin-left: 3px;\">In Words:</strong> {{doc.in_words}} </p>\n             {% endif %}\n        </div>\n        {% if doc.payment_terms %}\n        <div class=\"payment-terms\">\n            <p style=\"font-size: 12pt;font-family:Source Sans Pro;margin-left: 3px;\"><strong style=\"font-size: 12pt; padding-top:25;\">Payment Terms: </strong>{{doc.payment_terms}}</p>\n\n        </div>\n        {% endif %}\n        {% if doc.terms %}\n        <div class=\"terms\">\n            <p style=\"font-size: 12pt;margin-left: 3px;\"><strong>Terms:</strong></p>\n            <p style=\"font-size: 12pt;margin-left: 3px;\">{{doc.terms}} </p>\n        </div>\n        {% endif %}\n    </div>\n\n</body>\n</html>",
